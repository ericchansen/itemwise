# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=inventory
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Application Settings
DEBUG=false
# ENV=production  # Set to 'production' or 'prod' for production deployments

# Security - REQUIRED for production (when DEBUG=false or ENV=production)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# SECRET_KEY=your-secure-random-key-here
# JWT_SECRET_KEY=your-jwt-secret-here  # Alternative: JWT-specific key

# Azure OpenAI (optional - enables intelligent chat + semantic search)
# Uses DefaultAzureCredential (run `az login` first)
# AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
# AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
# AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small
# AZURE_OPENAI_VISION_DEPLOYMENT=gpt-4o

# Azure Communication Services (optional - enables invite emails)
# AZURE_COMMUNICATION_CONNECTION_STRING=endpoint=https://...;accesskey=...
